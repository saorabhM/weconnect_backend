<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2024-01-29-01-create-users-table" author="ankit">
        <createTable tableName="users">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="VARCHAR(20)">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_verified" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2024-01-29-02-create-user-profiles-table" author="ankit">
        <createTable tableName="user_profiles">
            <column name="user_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="gender" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
            <column name="date_of_birth" type="DATE">
                <constraints nullable="true"/>
            </column>
            <column name="bio" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="job_title" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="company" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="height_cm" type="INT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="user_profiles"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_user_profiles_users"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="2024-01-29-03-create-user-photos-table" author="ankit">
        <createTable tableName="user_photos">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="photo_url" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="is_primary" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="INT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="user_photos"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_user_photos_users"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="2024-01-29-04-create-user-preferences-table" author="ankit">
        <createTable tableName="user_preferences">
            <column name="user_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="interested_in" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
            <column name="min_age" type="INT" defaultValue="18">
                <constraints nullable="false"/>
            </column>
            <column name="max_age" type="INT" defaultValue="60">
                <constraints nullable="false"/>
            </column>
            <column name="max_distance_km" type="INT" defaultValue="50">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="user_preferences"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_user_preferences_users"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="2024-01-29-05-create-user-locations-table" author="ankit">
        <createTable tableName="user_locations">
            <column name="user_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="latitude" type="DECIMAL(9,6)">
                <constraints nullable="true"/>
            </column>
            <column name="longitude" type="DECIMAL(9,6)">
                <constraints nullable="true"/>
            </column>
            <column name="city" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="country" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="user_locations"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_user_locations_users"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
